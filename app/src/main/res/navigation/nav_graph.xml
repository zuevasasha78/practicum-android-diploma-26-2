<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/favouriteFragment"
        android:name="ru.practicum.android.diploma.favourites.presentation.FavouriteFragment"
        android:label="FavouriteFragment"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_favouriteFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.search.presentation.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
        <action
            android:id="@+id/action_searchFragment_to_mainFilterFragment"
            app:destination="@id/mainFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamFragment"
        android:name="ru.practicum.android.diploma.team.presentation.TeamFragment"
        android:label="TeamFragment"
        tools:layout="@layout/fragment_team"/>
    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.vacancy.presentation.VacancyFragment"
        android:label="VacancyFragment"
        tools:layout="@layout/fragment_vacancy">
    <argument
        android:name="vacancyId"
        app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/chooserFragment"
        android:name="ru.practicum.android.diploma.filter.presentation.chooser.ChooserFragment"
        android:label="ChooserFragment"
        tools:layout="@layout/fragment_chooser">
        <argument
            android:name="type"
            app:argType="ru.practicum.android.diploma.filter.domain.model.ChooserType"/>
    </fragment>
    <fragment
        android:id="@+id/mainFilterFragment"
        android:name="ru.practicum.android.diploma.filter.presentation.main.MainFilterFragment"
        android:label="MainFilterFragment"
        tools:layout="@layout/fragment_main_filter">
        <action
            android:id="@+id/action_mainFilterFragment_to_workplaceFragment"
            app:destination="@id/workplaceFragment" />
        <action
            android:id="@+id/action_mainFilterFragment_to_industriesChooserFragment"
            app:destination="@id/industriesChooserFragment" />
        <action
            android:id="@+id/action_mainFilterFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/workplaceFragment"
        android:name="ru.practicum.android.diploma.filter.presentation.workplace.fragments.WorkplaceFragment"
        android:label="WorkplaceFragment">
        <action
            android:id="@+id/action_workplaceFragment_to_selectionFragment"
            app:destination="@id/selectCountryFragment" />
        <argument
            android:name="countryName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="countryId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="regionName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="regionId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_workplaceFragment_to_selectRegionFragment"
            app:destination="@id/selectRegionFragment" />
        <action
            android:id="@+id/action_workplaceFragment_to_mainFilterFragment"
            app:destination="@id/mainFilterFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectCountryFragment"
        android:name="ru.practicum.android.diploma.filter.presentation.workplace.fragments.SelectCountryFragment"
        android:label="SelectionFragment">
        <action
            android:id="@+id/action_selectCountryFragment_to_workplaceFragment"
            app:destination="@id/workplaceFragment" />
        <argument
            android:name="countryName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/selectRegionFragment"
        android:name="ru.practicum.android.diploma.filter.presentation.workplace.fragments.SelectRegionFragment"
        android:label="SelectRegionFragment" />
    <fragment
        android:id="@+id/industriesChooserFragment"
        tools:layout="@layout/fragment_industries_chooser"
        android:name="ru.practicum.android.diploma.filter.presentation.chooser.industries.IndustriesChooserFragment"
        android:label="IndustriesChooserFragment" />
</navigation>
