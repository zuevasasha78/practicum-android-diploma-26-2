<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolBarTextStyle">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SearchInfoTextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:background">@null</item>
    </style>

    <style name="button_general">
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">17dp</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="display_medium_22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="vacancy_item_text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="vacancy_text_general">
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="vacancy_text_22_bold" parent="vacancy_text_general">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="vacancy_text_22_medium" parent="vacancy_text_general">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="vacancy_text_16_medium" parent="vacancy_text_general">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="vacancy_text_16_regular" parent="vacancy_text_general">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="team_member">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
</resources>
