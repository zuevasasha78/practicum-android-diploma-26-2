<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_general">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/item_title</item>
    </style>

    <style name="button_general">
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/item_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">17dp</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="vacancy_text_general">
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="vacancy_text_22_bold" parent="vacancy_text_general">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="vacancy_text_22_medium" parent="vacancy_text_general">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="vacancy_text_16_medium" parent="vacancy_text_general">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="vacancy_text_16_regular" parent="vacancy_text_general">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="vacancy_placeholder">
        <item name="android:layout_marginTop">135dp</item>
        <item name="android:layout_gravity">center</item>
    </style>



    <style name="vacancy_item_title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/item_title</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="vacancy_item_text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/item_text</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
