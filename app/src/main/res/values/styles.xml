<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="toolbar_general">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/item_title</item>
    </style>

    <style name="button_general">
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/item_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">17dp</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="vacancy_item_title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/item_title</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="vacancy_item_text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/item_text</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="team_member">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
        <item name="android:textSize">@dimen/item_text</item>
    </style>
</resources>
