<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_filter"
        style="@style/ToolBarTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="@dimen/size_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_back_arrow"
        app:title="@string/filter_settings"
        app:titleMarginStart="@dimen/size_0dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/place_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/size_22dp"

        android:hint="@string/work_place"
        android:textColorHint="@color/hint_color_filter_screen"
        app:boxBackgroundMode="none"
        app:endIconDrawable="@drawable/leading_icon"
        app:endIconMode="custom"
        app:endIconTint="?attr/leadingColor"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/text_color"
        app:hintTextAppearance="@style/HintTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_filter">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/place_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="none"
            android:padding="0dp"
            android:textSize="@dimen/text_size_16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main filter fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/sector_chooser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="sector chooser button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
