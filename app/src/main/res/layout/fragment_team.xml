<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_16dp"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:fontFamily="@font/ys_display_medium"
        android:paddingVertical="@dimen/_19dp"
        android:text="@string/team"
        android:textColor="?android:attr/textColorPrimary"
        android:textFontWeight="500"
        android:textSize="@dimen/item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:fontFamily="@font/ys_display_bold"
        android:paddingVertical="@dimen/_8dp"
        android:text="@string/about_us"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/_32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_title" />

    <TextView
        android:id="@+id/developer1"
        style="@style/team_member"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Александра Зуева"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_us" />

    <TextView
        android:id="@+id/developer2"
        style="@style/team_member"
        android:text="Владислав Хамин"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer1" />

    <TextView
        android:id="@+id/developer3"
        style="@style/team_member"
        android:text="Максим Овсянников"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer2" />

    <TextView
        android:id="@+id/developer4"
        style="@style/team_member"
        android:text="Руслан Фазлыев"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer3" />
</androidx.constraintlayout.widget.ConstraintLayout>
